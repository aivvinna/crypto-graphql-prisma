type User {
  id: ID! @unique
  username: String!
  email: String! @unique
  password: String!
  posts: [Post!]! @relation(name: "PostToUser", onDelete: CASCADE)
  location: String @default(value: "")
  bio: String @default(value: "")
  following: [User!]! @relation(name: "UserToUser")
  followers: [User!]! @relation(name: "UserToUser")
  updatedAt: DateTime!
  createdAt: DateTime!
}

type Post {
  id: ID! @unique
  content: String!
  category: String @default(value: "")
  author: User! @relation(name: "PostToUser", onDelete: SET_NULL)
  parent: Post @relation(name: "PostToPost")
  posts: [Post!]! @relation(name: "PostToPost")
  updatedAt: DateTime!
  createdAt: DateTime!
}
